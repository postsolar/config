# ~ settings

set shell zsh
set shellflag -dfc
set shellopts -eu

set anchorfind false
set borderfmt "\033[2;90m"
set cursorpreviewfmt ""
set findlen 0
set globfilter true
set globsearch true
set hidden true
set icons true
set ignoredia false
set incsearch true
set incfilter true
set locale "*"
set mouse true
set preview true
set previewer ""
set promptfmt "\033[34;1m %d\033[0m\033[1m%f\033[0m"
set ratios 2:2:5
set reverse true
set sixel true
set tempmarks 12345
set truncatechar â€¦
set truncatepct 0
set watch true
set wrapscan true
set wrapscroll true

# ~ commands

cmd trash $gio trash -- ${(f)fx} 

cmd fuzzy-cd ${{
  fzf --walker=dir,follow,hidden \
      --scheme=path \
      --tiebreak=length \
      --bind=enter:become:'lf -remote "send $id cd {}"' || true
}}

cmd follow-link % lf -remote "send $id select ${(qqq)$(readlink -f -- $f)}"

cmd copy-paths-clipboard $ wl-copy -n    <<< ${(F)fx}
cmd copy-paths-primary   $ wl-copy -n -p <<< ${(F)fx}

cmd disk-usage $ dust -d 1 --force-colors | ${PAGER:-cat}

# ~ maps

map <enter> open

map d trash
map D delete

map <a-f> fuzzy-cd

map <a-u> disk-usage

